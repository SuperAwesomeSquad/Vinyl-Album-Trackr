<div id='album'> 
	<strong><%= @album.title %></strong> by <em><%= @album.artist %></em>
	<span id='author'>Created by <%= @album.user.email %></span>
	<%= link_to "Edit Album", edit_album_path(@album) %>
	<%= link_to "Delete Album", 
		album_path(@album), 
		:method => :delete, 
		:confirm => "Are you sure you want to delete this album?" %>
</div>