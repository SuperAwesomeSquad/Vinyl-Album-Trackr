<h2> <%= @collection.name %> </h2>
<% title(@collection.name, "Collection") %>
<% if @collection.albums.empty? %>
<p>Your collection is devoid of albums. :( Why not <%= link_to "add one", new_album_path %>?</p>
<% else %>
<ul>
<% @collection.albums.each do |album| %>
<li>
  <%= link_to album.title, album %> by <%= album.artists.first["name"] %>
</li>
<% end %>
</ul>

<% end %>


  <%= link_to "Edit Collection", edit_collection_path(@collection) %>
  <%= link_to "Delete Collection", collection_path(@collection), :method => :delete, :confirm => "Are you sure you want to delete this collection?" %>

