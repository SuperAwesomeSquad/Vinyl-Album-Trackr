
<!DOCTYPE html>
<html>
<head>
  <title>
    <% if content_for?(:title) %>
      <%= yield(:title) %>
    <% else %>
      Celluloid
    <% end %>
</title>
  <%= stylesheet_link_tag    "bootstrap", :media => "all" %>
  <%= stylesheet_link_tag   "bootstrap-responsive", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="container">
    <div class="navbar">
      <div class="navbar-inner">
        <ul class="nav"><li <%= currentPageActiveClass(root_path) %>>
        <%= link_to "#{image_tag('celluloid.png', :size => '15x15', :class => 'img-circle')} Celluloid".html_safe, root_path, :class => "brand" %></li>
          <!-- <li <%= currentPageActiveClass(root_path) %> ><%= link_to "Celluloid", root_path %></li>-->
          <li <%= currentPageActiveClass(albums_path) %>><%= link_to "View All Albums", albums_path %></li>
          <li <%= currentPageActiveClass(new_album_path) %>><%= link_to "Add Album", new_album_path %></li>
          <!-- <li <%= currentPageActiveClass(search_albums_path) %>><%= link_to "Search for Album", search_albums_path %></li> -->
          <li <%= currentPageActiveClass(admin_root_path) %>><%= link_to "Admin", admin_root_path %></li>

        </ul>
      </div>
    </div>
    <div class="row">
      <div class="span12">
        <% flash.each do |key,value| %>
        <div class='<%= alertStyleClassGenerator(key) %>'>
         <%= value %>
       </div>
       <% end %>
     </div>
   </div>

   <nav>
    <% if user_signed_in? %>
      Signed in as <%= current_user.email %> |
      <%= link_to 'Sign Out', destroy_user_session_path, :method => 'delete' %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path %> | <%= link_to "Sign in", new_user_session_path %>
    <% end %>
  </nav>

   <%= yield %>

<%= diagnosticInformation %>
</div>
 </body>
 </html>
